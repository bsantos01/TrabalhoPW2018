@model IEnumerable<TrabalhoPW.Models.Objeto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Objectos</h2>

@if (User.IsInRole("Admin") || User.IsInRole("Especialista"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Periodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zona)
            </th>
            @if (User.IsInRole("Admin") || User.IsInRole("Especialista"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.Origem)
                </th>
            }
            @if (User.Identity.IsAuthenticated) {  
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
            }
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Periodo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zona)
            </td>
            @if (User.IsInRole("Admin") || User.IsInRole("Especialista"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Origem)
                </td>
            }
            @if (User.Identity.IsAuthenticated)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
            }
            <td>

                @if (User.IsInRole("Admin") || User.IsInRole("Especialista"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.ObjID })<a> | </a>@Html.ActionLink("Delete", "Delete", new { id = item.ObjID }) <a> | </a>
                }
                else if (User.IsInRole("Membro"))
                {
                    @Html.ActionLink("Disponibilidade", "Disp", new { id = item.ObjID })<a> | </a>
                    @Html.ActionLink("Alugar", "Create", "Aluguers", new { id = item.ObjID }, null)<a> | </a>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Details", "Details", new { id = item.ObjID })
                }


            </td>
        </tr>
        }

    </table>
