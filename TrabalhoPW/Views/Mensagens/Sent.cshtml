@model IEnumerable<TrabalhoPW.Models.Mensagem>

@{
    ViewBag.Title = "Sent";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Sent</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DestinatarioID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Conteudo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Destinatario.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conteudo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.MensagemID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MensagemID })
            </td>
        </tr>
    }

</table>
