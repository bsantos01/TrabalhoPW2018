@model IEnumerable<TrabalhoPW.Models.Mensagem>

@{
    ViewBag.Title = "Sent";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Emviadas</h2>

<p>
    <button class="btn btn-default" onclick="location.href='@Url.Action("Create" )';return false;">Criar Nova</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DestinatarioID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Conteudo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Destinatario.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conteudo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data)
            </td>
            <td>
                <button class="btn btn-default" onclick="location.href='@Url.Action("Details",new { id = item.MensagemID} )';return false;">Detalhes</button>
                <button class="btn btn-default" onclick="location.href='@Url.Action("Delete",new { id = item.MensagemID} )';return false;">Remover</button>


            </td>
        </tr>
    }

</table>
