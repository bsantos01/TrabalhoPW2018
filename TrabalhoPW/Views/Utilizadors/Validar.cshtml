@model IEnumerable<TrabalhoPW.Models.Utilizador>

@{
    ViewBag.Title = "Validar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Validar</h2>

<p>
    Todas as contas abaixo não tem a validação efectuada.
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UtilizadorID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NIF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valido)

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UtilizadorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NIF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valido)
            </td>

            <td>
                <button class="btn btn-default" onclick="location.href='@Url.Action("Validate", new { id = item.UtilizadorID })';return false;">Validar</button>
                <button class="btn btn-default" onclick="location.href='@Url.Action("Delete", new { id = item.UtilizadorID })';return false;">Remover</button>
            </td>
        </tr>
    }

</table>
